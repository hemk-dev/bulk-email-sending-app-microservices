{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["../../packages/*/src/index"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
